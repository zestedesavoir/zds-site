root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{py,html}]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[package.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
